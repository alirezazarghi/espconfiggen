{
  "name": "espconfiggen",
  "version": "1.0.0",
  "description": "Code generator for ESP8266 web configuration/api and persistance",
  "main": "index.js",
  "scripts": {
    "clean": "rimraf dist",
    "init:dist": "mkdirp dist",
    "init:css": "cssmin node_modules/bulma/css/bulma.css > dist/bulma.min.css",
    "init:html:local": "cssmin src/indexGeneratorApp.html > dist/index.html",
    "init:config": "cp src/config.json dist/",
    "init:fonts:dir": "mkdirp dist/fonts",
    "init:fonts:files": "cp -R node_modules/font-awesome/fonts/* dist/fonts/",
    "init:fonts:css": "cp node_modules/font-awesome/css/font-awesome.min.css dist/",
    "init": "npm-run-all init:**",
    "tslint": "tslint --project .",
    "tsc": "tsc",
    "webpack": "webpack",
    "webpack:dev": "webpack-dev-server",
    "gzip:init": "mkdirp dist/data",
    "gzip:css": "cat dist/bulma.min.css | gzip > dist/data/bulma.min.css.gz",
    "gzip:js": "cat dist/configApp.bundle.min.js | gzip > dist/data/bundle.min.js.gz",
    "gzip:html": "cat src/indexConfigApp.html | gzip > dist/data/index.html.gz",
    "gzip": "npm-run-all gzip:*",
    "build": "npm-run-all init tslint tsc webpack gzip",
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "npm-run-all build webpack:dev"
  },
  "keywords": [
    "esp8266",
    "webconfig",
    "configuration",
    "code",
    "generator"
  ],
  "author": "Paul Smith <code@uvwxy.de>",
  "license": "ISC",
  "devDependencies": {
    "@types/file-saver": "^1.3.0",
    "@types/react": "^16.0.36",
    "@types/react-dom": "^16.0.3",
    "bloomer": "^0.6.3",
    "bulma": "^0.6.2",
    "cpr": "^3.0.1",
    "cssmin": "^0.4.3",
    "file-saver": "^1.3.3",
    "font-awesome": "^4.7.0",
    "mkdirp": "^0.5.1",
    "npm-run-all": "^4.1.2",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "tslint": "^5.9.1",
    "tslint-config-standard": "^7.0.0",
    "typescript": "^2.7.1",
    "uglifyjs-webpack-plugin": "^1.1.8",
    "webpack": "^3.10.0"
  },
  "dependencies": {
    "webpack-dev-server": "^2.11.1"
  }
}
