{
  "name": "espconfiggen",
  "version": "1.0.0",
  "description": "Code generator for ESP8266 web configuration/api and persistance",
  "main": "index.js",
  "scripts": {
    "clean": "rimraf dist",
    "init:dist": "mkdirp dist",
    "init:css": "sass src/style.scss dist/bundle.css && cssmin dist/bundle.css > dist/bundle.min.css",
    "init:html:local": "cssmin src/indexGeneratorApp.html > dist/index.html",
    "init:config": "cp src/config.json dist/",
    "init:fonts:dir": "mkdirp dist/fonts",
    "init:fonts:files": "cp -R node_modules/font-awesome/fonts/* dist/fonts/",
    "init": "npm-run-all init:**",
    "tsc": "tsc",
    "webpack:prod": "NODE_ENV=production webpack -p",
    "webpack:dev": "webpack-dev-server -w",
    "gzip:init": "mkdirp dist/data",
    "gzip:css": "cat dist/bundle.min.css | gzip > dist/data/bundle.min.css.gz",
    "gzip:js": "cat dist/configApp.bundle.min.js | gzip > dist/data/bundle.min.js.gz",
    "gzip:html": "cat src/indexConfigApp.html | gzip > dist/data/index.html.gz",
    "gzip:zip": "cd dist/ && zip -r data.zip data/",
    "gzip": "npm-run-all gzip:*",
    "build": "npm-run-all clean init webpack:prod gzip",
    "start": "npm-run-all clean init webpack:dev"
  },
  "keywords": [
    "esp8266",
    "webconfig",
    "configuration",
    "code",
    "generator"
  ],
  "author": "Paul Smith <code@uvwxy.de>",
  "license": "ISC",
  "devDependencies": {
    "@types/file-saver": "^1.3.1",
    "@types/react": "^16.9.2",
    "@types/react-color": "^2.17.2",
    "@types/react-dom": "^16.8.5",
    "@types/react-monaco-editor": "^0.10.1",
    "@types/toastr": "^2.1.37",
    "@types/jquery": "^3.3.31",
    "bloomer": "^0.6.5",
    "bulma": "^0.6.2",
    "copy-webpack-plugin": "^4.6.0",
    "cpr": "^3.0.1",
    "cssmin": "^0.4.3",
    "file-saver": "^1.3.8",
    "font-awesome": "^4.7.0",
    "fork-ts-checker-webpack-plugin": "^1.5.0",
    "hsl-to-hex": "^1.0.0",
    "mkdirp": "^0.5.1",
    "monaco-editor": "^0.10.1",
    "npm-run-all": "^4.1.5",
    "react": "^16.9.0",
    "react-color": "^2.17.3",
    "react-dom": "^16.9.0",
    "react-hot-loader": "^4.12.11",
    "react-monaco-editor": "^0.13.0",
    "toastr": "^2.1.4",
    "ts-loader": "^4.5.0",
    "tslint": "^5.18.0",
    "tslint-config-standard": "^7.1.0",
    "typescript": "^3.5.3",
    "webpack": "^4.20.2",
    "webpack-cli": "^3.1.1",
    "webpack-dev-server": "^3.8.0"
  }
}
